# Supabase (REQUIRED)
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Kroger API (FREE - Real grocery prices)
# Get API keys from: https://developer.kroger.com/
# Covers: Kroger, Fred Meyer, Ralphs, King Soopers, Fry's, Smith's, QFC, etc.
KROGER_CLIENT_ID=your_kroger_client_id
KROGER_CLIENT_SECRET=your_kroger_client_secret

# Positionstack Geocoding API (FREE - 25,000 requests/month)
# Get API key from: https://positionstack.com/signup/free
# Used for converting addresses/zip codes to coordinates for accurate store searches
POSITIONSTACK_API_KEY=your_positionstack_api_key

# Kroger OAuth (OPTIONAL - for Kroger cart integration)
# Use the same callback URI when setting up your Kroger app
KROGER_REDIRECT_URI=http://localhost:3825/api/kroger/callback

# Instacart Connect API (OPTIONAL - for additional retailers)
# Get API keys from: https://docs.instacart.com/connect/
INSTACART_API_KEY=your_instacart_api_key
INSTACART_API_SECRET=your_instacart_api_secret
INSTACART_BASE_URL=https://api.instacart.com

# DeepSeek API (OPTIONAL - can also be configured in Admin panel)
# Get API key from: https://platform.deepseek.com
DEEPSEEK_API_KEY=your_deepseek_api_key
DEEPSEEK_BASE_URL=https://api.deepseek.com

# OpenAI (OPTIONAL - can also be configured in Admin panel)
# Get API key from: https://platform.openai.com
OPENAI_API_KEY=your_openai_api_key

# API Key Encryption (REQUIRED if using Admin panel to store keys)
# Generate a random 32-character string for production
API_KEY_ENCRYPTION_KEY=your-32-character-encryption-key-here

# Cloudflare R2 (OPTIONAL - for Receipt Storage)
R2_ACCOUNT_ID=your_r2_account_id
R2_ACCESS_KEY_ID=your_r2_access_key
R2_SECRET_ACCESS_KEY=your_r2_secret_key
R2_BUCKET_NAME=julyu-receipts
R2_PUBLIC_URL=your_r2_public_url

# Firebase (OPTIONAL - for Google Sign-In)
# Get these from Firebase Console: https://console.firebase.google.com
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project.firebasestorage.app
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=your_measurement_id

# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3825
NODE_ENV=development

